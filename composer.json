{
  "name": "jason21333/bmb-website",
  "description": "Body Mind Balance Healthcare Website",
  "type": "project",
  "require": {
    "php": ">=7.4"
  },
  "scripts": {
    "post-install-cmd": [
      "php -r \"echo '🚀 Starting deployment...\\n';\"",
      "php -r \"if (file_exists('deploy-hostinger.sh')) { echo '📦 Found deployment script\\n'; chmod('deploy-hostinger.sh', 0755); } else { echo '❌ Deployment script not found\\n'; }\"",
      "php -r \"if (file_exists('deploy-hostinger.sh')) { passthru('./deploy-hostinger.sh 2>&1'); }\""
    ]
  },
  "config": {
    "optimize-autoloader": true
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  }
} 